generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JobCategory {
  createdAt    DateTime @default(now())
  categoryName String   @id @unique
}

model JobListing {
  listingId   String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  jobProvider JobProvider @relation(fields: [providerId], references: [id])
  providerId  String
  area        Area        @relation(fields: [areaName], references: [name])
  areaName    String
}

model Area {
  name        String       @id @unique
  JobListings JobListing[]
}

model JobProvider {
  name       String
  id         String       @id @default(uuid())
  JobListing JobListing[]
}
